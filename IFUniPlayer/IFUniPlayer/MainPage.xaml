<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IFUniPlayer"
             x:Class="IFUniPlayer.MainPage">

    <StackLayout>
        <Grid>
            <Grid.Resources>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="_menuBtn" Image="Menu.png" Grid.Row="0" Grid.Column="0"  Clicked="MenuButtonClicked" Text="Menu" WidthRequest="100" HeightRequest="80"/>
             <Label x:Name="_scoreLbl" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center"/>
          <ScrollView VerticalScrollBarVisibility="Always" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Editor x:Name="_gameEditor" VerticalOptions="FillAndExpand" HeightRequest="800"/>
          </ScrollView>
        </Grid>
    </StackLayout>
</ContentPage>
